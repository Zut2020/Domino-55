<Application x:Class="Domino_55.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Domino_55" xmlns:views="clr-namespace:Domino_55.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        
        <Style x:Key="buttonStyleNormal" TargetType="Image">
            <Setter x:Name="buttonW" Property="Width" Value="16"/>
            <Setter x:Name="buttonH" Property="Height" Value="16"/>
        </Style>
        <Style x:Key="buttonStyleLarge" TargetType="Image">
            <Setter x:Name="buttonW" Property="Width" Value="25"/>
            <Setter x:Name="buttonH" Property="Height" Value="25"/>
        </Style>
        <Style x:Key="imgStylePressed" TargetType="Image">
            <Setter x:Name="buttonW" Property="Width" Value="30"/>
            <Setter x:Name="buttonH" Property="Height" Value="30"/>
        </Style>

        <Style x:Key="imgStylePressed2" TargetType="Image">
            <Setter x:Name="buttonW" Property="Width" Value="30"/>
            <Setter x:Name="buttonH" Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,35,0,0"/>
        </Style>
    </Application.Resources>
</Application>
