<Application x:Class="Domino_55.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Domino_55"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="buttonStyleNormal" TargetType="local:DominoButton">
            <Setter x:Name="buttonW" Property="Width" Value="16"/>
            <Setter x:Name="buttonH" Property="Height" Value="16"/>
            <Setter Property="Background" Value="#01000000"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style x:Key="buttonStyleLarge" TargetType="local:DominoButton">
            <Setter x:Name="buttonW" Property="Width" Value="25"/>
            <Setter x:Name="buttonH" Property="Height" Value="25"/>
            <Setter Property="Background" Value="#01000000"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Application.Resources>
</Application>
